<div class="head-wrap {% if startpage is defined %}startpage{% endif %}" style="background: linear-gradient(-63deg,rgba(0,136,233,0.05), rgba(0,136,233,0.3)), linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.8) ), url({{ settings.get('style.bg_image') }})">
    <div class="head-content container">
        {% set logo = settings.get('style.logo') %}
        {% if startpage is not defined %}<a href="/">{% endif %}
        {% if logo is empty %}
            <img class="logo mb-4" src="{{ asset("build/images/logo-white.png") }}" alt="Logo">
        {% else %}
            <img class="logo mb-4" src="{{ logo }}" alt="Logo">
        {% endif %}
        {% if startpage is not defined %}</a>{% endif %}
        {% block headerContent %}
        {% endblock %}
    </div>
</div>

{% block nav %}
    <div class="container">
        {%  include 'site/components/nav/navMain.html.twig' %}
    </div>
{% endblock %}